<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.notepad.mapper.NoteMapper">

    <select id="findAll" resultType="Note">
        select * from notepad.note
    </select>

    <insert id="add" parameterType="Note">
        insert into notepad.note
        values (#{note_id},#{note_title},#{note_pic},#{note_content},#{note_date},#{note_class_id},#{top},#{note_rank},#{note_collect},#{delete_time})
    </insert>

    <delete id="delete" parameterType="Integer">
        delete from notepad.note where note_id = #{note_id}
    </delete>

    <update id="update" parameterType="Note">
        update notepad.note
        set note_title = #{note_title},note_pic = #{note_pic},note_content = #{note_content},note_date = #{note_date},note_class_id= #{note_class_id},top=#{top},note_rank=#{note_rank},note_collect=#{note_collect},delete_time=#{delete_time}
        where note_id = #{note_id}
    </update>

    <select id="find" parameterType="Integer" resultType="Note">
        select *
        from notepad.note
        where note_id = #{note_id};
    </select>
</mapper>