<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.notepad.mapper.UnfinishClassMapper">

    <select id="findAll" resultType="UnfinishClass">
        select * from unfinish_class;
    </select>

    <insert id="add" parameterType="string">
        insert into unfinish_class(unfinish_class)
        values (#{unfinish_class});
    </insert>

    <delete id="delete" parameterType="Integer">
        delete from unfinish_class
        where unfinish_class_id = #{unfinish_class_id};
    </delete>

    <update id="update" parameterType="UnfinishClass">
        update unfinish_class
        set unfinish_class = #{unfinish_class}
        where unfinish_class_id = #{unfinish_class_id};
    </update>

    <select id="find_id" parameterType="Integer" resultType="UnfinishClass">
        select *
        from unfinish_class
        where unfinish_class_id = #{unfinish_class_id};
    </select>

    <select id="find_class" parameterType="String" resultType="UnfinishClass">
        select *
        from unfinish_class
        where unfinish_class = #{unfinish_class};
    </select>

</mapper>